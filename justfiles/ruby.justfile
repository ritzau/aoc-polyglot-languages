# Ruby AOC Development Commands

# Show available commands
default:
    @just --list

# Build the solution (via nix build)
build:
    nix build

# Run the solution (via nix run)
run:
    nix run

# Run tests
test:
    ruby -e "puts 'Ruby testing would go here'"

# Clean build artifacts
clean:
    rm -f result

# Lint code
lint:
    ruby -c *.rb || echo "Ruby syntax check would go here"

# Format code
format:
    echo "Ruby formatting would go here"
